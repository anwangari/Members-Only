<h2>Create New Message</h2>

<form action="/messages/new" method="POST">
  <input type="text" name="title" placeholder="Title" value="<%= formData.title || '' %>" required><br>
  <textarea name="text" placeholder="Your message" required><%= formData.text || '' %></textarea><br>
  <button type="submit">Post Message</button>
  <a href="/messages">Cancel</a>
</form>

<% if (errors.length > 0) { %>
  <ul>
    <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
  </ul>
<% } %>